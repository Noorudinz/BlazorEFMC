@inherits _EditCompanyDetailBase

@if (ShowDialog)
{
<div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width:800px;">
            <div class="modal-header">
                <span class="modal-title" id="titleLabel">Edit Company</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <EditForm Model="@Company" OnValidSubmit="@HandleValidSubmit">
                <div class="modal-body">



                    <DataAnnotationsValidator />
                    <ValidationSummary />



                    <div class="form-group row">
                        <label for="lastName" class="col-sm-4 col-form-label">Org Name: </label>
                        <div class="col-sm-8">
                            <InputText id="lastName" class="form-control" @bind-Value="@Company.Org_Name" placeholder="Enter last name"></InputText>
                            <ValidationMessage For="@(() => Company.Org_Address)" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lastName" class="col-sm-4 col-form-label">Org Address: </label>
                        <div class="col-sm-8">
                            <InputText id="firstName" class="form-control" @bind-Value="@Company.Org_Address" placeholder="Enter first name"></InputText>
                            <ValidationMessage For="@(() => Company.Org_Address)" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lastName" class="col-sm-4 col-form-label">Email: </label>
                        <div class="col-sm-8">
                            <InputText id="email" class="form-control" @bind-Value="@Company.Org_Email" placeholder="Enter email"></InputText>
                            <ValidationMessage For="@(() => Company.Org_Email)" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lastName" class="col-sm-4 col-form-label">Phone: </label>
                        <div class="col-sm-8">
                            <InputText id="email" class="form-control" @bind-Value="@Company.Org_Phone" placeholder="Enter email"></InputText>
                            <ValidationMessage For="@(() => Company.Org_Phone)" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lastName" class="col-sm-4 col-form-label">Remarks: </label>
                        <div class="col-sm-8">
                            <InputText id="email" class="form-control" @bind-Value="@Company.Org_Remarks" placeholder="Enter email"></InputText>
                            <ValidationMessage For="@(() => Company.Org_Remarks)" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="email" class="col-sm-4 col-form-label">Website: </label>
                        <div class="col-sm-8">
                            <InputText id="email" class="form-control" @bind-Value="@Company.Org_Website" placeholder="Enter email"></InputText>
                            <ValidationMessage For="@(() => Company.Org_Website)" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="email" class="col-sm-4 col-form-label">Zip: </label>
                        <div class="col-sm-8">
                            <InputText id="email" class="form-control" @bind-Value="@Company.Org_Zip" placeholder="Enter email"></InputText>
                            <ValidationMessage For="@(() => Company.Org_Zip)" />
                        </div>
                    </div>




                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-success">Update company</button>
                    <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                </div>

            </EditForm>
        </div>
    </div>
</div>}
