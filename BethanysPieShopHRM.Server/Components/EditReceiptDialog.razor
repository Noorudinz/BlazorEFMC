@using BethanysPieShopHRM.Server.Services;
@using BethanysPieShopHRM.Shared;
@using Syncfusion.Blazor.Buttons;
using BethanysPieShopHRM.Server.Repository;
@inherits EditReceiptDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Edit User Role</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>


                <div class="modal-body">
                    <div class="row alert @StatusClass">
                        <p>@ErrorMsg</p>
                    </div>


                    <EditForm Model="@receipt" OnValidSubmit="@HandleValidSubmit">


                        <input type="hidden" value="@receipt.ReceiptNo" />

                        <div class="form-group">
                            <label for="Name">Flat No: </label>
                            <InputText id="FlatNo" class="form-control" @bind-Value="@receipt.FlatNo"></InputText>
                        </div>

                        <div class="form-group row">
                            <label for="country" class="col-sm-3">Country: </label>
                            <select id="PaymentMode" class="form-control">
                                <option value="Cash">Cash</option>
                                <option value="Credit Card">Credit Card</option>
                                <option value="Debit Card">Debit Card</option>
                                <option value="Cheque">Cheque</option>
                                <option value="Bank Transfer">Bank Transfer</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="Name">Cheque No: </label>
                            <InputText id="FlatNo" class="form-control" @bind-Value="@receipt.ChequeNo"></InputText>
                        </div>

                        <div class="form-group">
                            <label for="Name">Cheque date: </label>
                            <InputText id="cheqNo" class="form-control" @bind-Value="@receipt.ChequeDate"></InputText>
                        </div>

                        <div class="form-group">
                            <label for="Name">Bank: </label>
                            <InputText id="bank" class="form-control" @bind-Value="@receipt.Bank"></InputText>
                        </div>

                        <div class="form-group">
                            <label for="Name">Amount Received: </label>
                            <InputNumber id="amt" class="form-control" @bind-Value="@receipt.AmountReceived"></InputNumber>
                        </div>

                        <div class="form-group">
                            <label for="Name">Flat No: </label>
                            <InputText id="FlatNo" class="form-control" @bind-Value="@receipt.Narration"></InputText>
                        </div>

                        <button type="submit" class="btn btn-primary">Save receipt</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
    }

@code {

